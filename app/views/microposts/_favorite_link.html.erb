<% if micropost.id.in? current_user.favorite_micropost_ids %>
  <%= link_to fa_icon("star 1x", :class => "favorite-off"), favorite_path(:micropost_id => micropost.id), :method => :post, :remote => true %>
<% else %>
  <%= link_to fa_icon("star 1x", :class => "favorite-on"), favorite_path(:micropost_id => micropost.id), :method => :post, :remote => true %>
<% end %>
