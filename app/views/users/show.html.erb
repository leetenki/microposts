<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div>Tweets: <%= link_to @user.microposts.count, tweets_path(@user), id: "tweets", :remote => true %></div>
      <div>Followings: <%= link_to @user.following_users.count, followings_user_path(@user), id: "followings", :remote => true %></div>
      <div>Followers: <%= link_to @user.follower_users.count, followers_user_path(@user), id: "followers", :remote => true %></div>
    </section>
    <section>
      <%= @user.profile %>
    </section>
  </aside>

  <div class="col-md-8">
    <% if logged_in? %>
      <%= render 'follow_form' %>
    <% end %>

    <div id="informations">  
      <%= render 'tweets' %>
    </div>
  </div>
</div>