<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="col-md-4">
       <%= gravatar_for @user %>
      </div>
      <div class="col-md-7">
        <h1>
          <%= @user.name %>
        </h1>
        <div>Tweets: <%= link_to @user.microposts.count, tweets_path(@user), id: "tweets", :remote => true %></div>
        <div>Favorites: <%= link_to @user.favorite_microposts.count, favorites_path(@user), id: "favorites" %></div>
        <div>Followings: <%= link_to @user.following_users.count, followings_user_path(@user), id: "followings", :remote => true %></div>
        <div>Followers: <%= link_to @user.follower_users.count, followers_user_path(@user), id: "followers", :remote => true %></div>
      </div>
    </section>
    <section class="profile">
      <%= @user.profile %>
    </section>
  </aside>

  <div class="col-md-8">
    <% if logged_in? %>
      <%= render :partial => 'follow_form', :locals => { :user => @user, :page_owner => @user } %>
    <% end %>

    <div id="informations">  
      <%= render 'tweets' %>
    </div>
  </div>
</div>