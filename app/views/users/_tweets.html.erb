<h3>Microposts (<%= @user.microposts.count %>)</h3>
<% if @user.microposts.any? %>
	<ol class="microposts">
    <% tweet_ids = [] %>
    <% @microposts.each do |micropost| %>
      <%= render :partial => "/microposts/micropost", :locals => { :micropost => micropost, :tweet_ids => tweet_ids } %>
    <% end %>
	</ol>
  <%= paginate @microposts %>
<% end %>